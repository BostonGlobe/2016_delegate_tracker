/* =========================== */
/* Graphic styles
/* =========================== */

$sans = Helvetica, Arial, sans-serif
$serif = Georgia, Times, serif
$benton = Benton, Helvetica, Arial, sans-serif
$miller = Miller, Georgia, Times, serif
$miller-banner = Miller-Banner, Georgia, Times, serif

$regular = 400
$bold = 700

font(family = $serif, weight = 400, style = normal)
	font-family family
	font-weight weight
	font-style style

$dem = rgb(89, 136, 157)
$gop = rgb(191, 97, 81)

$parties = {
	democratic: $dem
	republican: $gop
}

.transparent 
	opacity 0

.intro
	text-align center

	&-hed 
		font-size 1.4em 
		font($benton, bold)
		
	&-updated 
		transition opacity 1s
		font-size 0.8em
		color #bcbcbc
		font($benton) 

.chart 
	margin 1em 0

for party, color in $parties

	.{party} .party-name 
		font($benton, $bold)
		font-size 1.2em
		color color

.candidate 
	display block
	height 100%
	width 100%
	overflow hidden
	position relative
	margin-bottom 0.5em
	font($benton, $bold)
	
	&-name
		float left 
		width 5em
		text-transform capitalize
		
	&-bar-container
		height 1.5em
		overflow hidden
		position relative
		background-color #efefef
		border-radius 3px
		margin-bottom 0.5em

.bar 
	height 100%
	float left 
	display inline-block

	&-number 
		position absolute
		top 0
		font-size 0.75em
		line-height 2
		color #333
		
		&.before-half 
			margin-left 0.75em
		
		&.after-half
			margin-right 0.75em
			color #efefef
			
		

.democratic .bar-pledged 
	background-color $dem

.democratic .bar-super 
	background-color tint($dem,20)
	background-image repeating-linear-gradient(
		45deg,
		tint($dem,40),
		tint($dem,40) .2em,
		tint($dem,20) .2em,
		tint($dem,20) .4em
	)
			
.republican .bar-pledged 
	background-color $gop

.needed 
	font($benton)
	font-size 0.8em
	color #888
	text-align right
	position relative

	&:after 
		display inline-block
		
		transform translateY(0.5em)
		content '\02935'		
		
		// position absolute
		// bottom -0.75em
		// right 0
		// content '\025BE'
		

.attribution 
	font($benton, $bold)
	font-size 0.75em 

.dem-key 
	font($benton)
	font-size 0.75em
	color #888
	height 100%
	overflow hidden
	line-height 1.5
	
	li 
		float left
		margin-right 1em
		list-style-type none
		vertical-align middle
		
		&:before
			content ''
			display inline-block
			width 1.4em 
			height 1.4em
			margin-right 0.5em
			border-radius 3px
			vertical-align bottom
			
		&.key-pledged:before
			background-color $dem

		&.key-super:before
			background-color tint($dem,20)
			background-image repeating-linear-gradient(
				45deg,
				tint($dem,40),
				tint($dem,40) .2em,
				tint($dem,20) .2em,
				tint($dem,20) .4em
			)
	
.gop-note 
	font($benton)
	font-size 0.75em
	color #888
	line-height 1.4	
	.name 
		text-transform capitalize
